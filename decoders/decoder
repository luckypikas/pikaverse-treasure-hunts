    <script>
        const SHIFT = 3;
        const SECRET_KEY_PHRASE = "CLICK THE CRYSTAL GATE TO ADVANCE"; // The key phrase that triggers the portal
        const PROGRESSION_URL = "https://example.com/vault-progression-link"; // Placeholder URL

        // --- Core Cipher Logic (Caesar Shift N) ---

        /**
         * Applies the Caesar cipher transformation.
         * @param {string} text - The input text.
         * @param {number} shift - The shift value.
         * @param {boolean} isDecoding - True if decoding (negative shift), false if encoding.
         * @returns {string} The transformed text.
         */
        function caesarTransform(text, shift, isDecoding) {
            let result = '';
            const finalShift = isDecoding ? -shift : shift;

            for (let i = 0; i < text.length; i++) {
                let char = text[i];

                if (char >= 'A' && char <= 'Z') {
                    // Uppercase letters (65-90)
                    let charCode = char.charCodeAt(0);
                    let newCode = (charCode - 65 + finalShift + 26) % 26 + 65;
                    result += String.fromCharCode(newCode);

                } else if (char >= 'a' && char <= 'z') {
                    // Lowercase letters (97-122)
                    let charCode = char.charCodeAt(0);
                    let newCode = (charCode - 97 + finalShift + 26) % 26 + 97;
                    result += String.fromCharCode(newCode);

                } else if (char >= '0' && char <= '9') {
                    // Numbers (48-57)
                    let charCode = char.charCodeAt(0);
                    let newCode = (charCode - 48 + finalShift + 10) % 10 + 48;
                    result += String.fromCharCode(newCode);

                } else {
                    // Keep spaces, punctuation, etc. as is
                    result += char;
                }
            }
            return result;
        }

        // --- UI Handlers and Integration ---

        function handleEncoding() {
            const plaintextInput = document.getElementById('plaintext-input').value;
            const encodedText = caesarTransform(plaintextInput, SHIFT, false);
            document.getElementById('ciphertext-output').value = encodedText;
        }

        function handleDecoding() {
            const ciphertextInput = document.getElementById('ciphertext-input').value;
            const decodedText = caesarTransform(ciphertextInput, SHIFT, true);
            document.getElementById('plaintext-output').value = decodedText;

            // Treasure Hunt Logic Check
            checkProgressionKey(decodedText.toUpperCase().trim());
        }

        function checkProgressionKey(decodedMessage) {
            const portalArea = document.getElementById('portal-area');
            const huntStatus = document.getElementById('hunt-status');
            const portalLink = document.getElementById('progression-portal');

            if (decodedMessage === SECRET_KEY_PHRASE) {
                // SUCCESS: Reveal the portal
                portalLink.href = PROGRESSION_URL;
                portalArea.classList.remove('hidden');
                huntStatus.textContent = "SUCCESS: The decoded scroll matches the Ancient Key! Click the glowing portal to advance.";
                huntStatus.classList.remove('text-gray-400');
                huntStatus.classList.add('text-green-500', 'font-bold');
            } else {
                // FAILURE/Default: Hide portal and show retry message
                portalArea.classList.add('hidden');
                huntStatus.textContent = "Decoding a hidden key will unlock the gateway.";
                huntStatus.classList.remove('text-green-500', 'font-bold');
                huntStatus.classList.add('text-gray-400');
            }
        }

        // --- Initialization ---

        document.addEventListener('DOMContentLoaded', () => {
            // Set the progression link placeholder
            document.getElementById('progression-portal').href = PROGRESSION_URL;

            // Attach event listeners
            document.getElementById('encode-btn').addEventListener('click', handleEncoding);
            document.getElementById('decode-btn').addEventListener('click', handleDecoding);

            // Copy to clipboard feature for encoded text
            document.getElementById('ciphertext-output').addEventListener('click', (e) => {
                if (e.target.value) {
                    e.target.select();
                    document.execCommand('copy');
                    // Optional visual feedback
                    e.target.style.transition = 'background-color 0.3s';
                    e.target.style.backgroundColor = '#4a403d'; // Temporary darker flash
                    setTimeout(() => {
                        e.target.style.backgroundColor = '#1a1517';
                    }, 300);
                }
            });
        });
    </script>
