    <div class="game-container">
        <h1>CHOOSE YOUR FATE</h1>
        <p>Three Gems. One Key. Two Traps.<br>Select wisely, Seeker.</p>

        <div class="gem-grid">
            <!-- Gem 1 -->
            <button class="gem-btn" onclick="selectGem(1)">
                <svg class="gem-icon gem-purple" viewBox="0 0 24 24">
                    <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
                </svg>
            </button>

            <!-- Gem 2 -->
            <button class="gem-btn" onclick="selectGem(2)">
                <svg class="gem-icon gem-blue" viewBox="0 0 24 24">
                    <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
                </svg>
            </button>

            <!-- Gem 3 -->
            <button class="gem-btn" onclick="selectGem(3)">
                <svg class="gem-icon gem-gold" viewBox="0 0 24 24">
                    <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
                </svg>
            </button>
        </div>

        <div id="message-area">Waiting for selection...</div>

        <!-- This is the Progression Link / Portal -->
        <a id="portal-btn" href="https://luckypikas.blogspot.com/p/next-level.html" target="_blank">
            ENTER THE PORTAL
        </a>
    </div>

    <script>
        // --- GAME LOGIC ---

        // We randomize the winning gem every time the page loads
        const winningGemIndex = Math.floor(Math.random() * 3) + 1; 
        let attempts = 0;

        function selectGem(gemId) {
            const messageArea = document.getElementById('message-area');
            const portalBtn = document.getElementById('portal-btn');
            const container = document.querySelector('.game-container');

            // Reset animations
            container.classList.remove('shake-anim');

            if (gemId === winningGemIndex) {
                // --- WIN STATE ---
                messageArea.style.color = "#10B981"; // Green
                messageArea.innerHTML = "ACCESS GRANTED. <br>You have found the Key.";
                portalBtn.style.display = "inline-block"; // Show the link
                
                // Disable buttons so they can't click again
                const buttons = document.querySelectorAll('.gem-btn');
                buttons.forEach(btn => btn.disabled = true);
                
            } else {
                // --- LOSE STATE ---
                attempts++;
                messageArea.style.color = "#EF4444"; // Red
                
                if (attempts < 3) {
                    messageArea.innerHTML = "ACCESS DENIED. <br>That is a Trap. Try Again.";
                    container.classList.add('shake-anim'); // Shake effect
                } else {
                    messageArea.innerHTML = "SYSTEM LOCKDOWN. <br>Too many failed attempts. Refresh to reset.";
                    // Disable buttons
                    const buttons = document.querySelectorAll('.gem-btn');
                    buttons.forEach(btn => btn.disabled = true);
                }
            }
        }
    </script>

