    <script>
        const handleDoorClick = (doorName, destination) => {
            const messageBox = document.getElementById('message-box');
            
            // 1. Show message instead of alert()
            messageBox.textContent = `Initiating sequence for ${doorName}... (Redirecting to ${destination})`;
            messageBox.classList.add('visible');
            
            // 2. Add a momentary flash effect to the clicked door (optional, but lively!)
            const targetDoor = document.querySelector(`a[href="#${doorName.toLowerCase().replace(/\s/g, '')}"]`);
            if (targetDoor) {
                targetDoor.classList.add('animate-pulse');
                setTimeout(() => {
                    targetDoor.classList.remove('animate-pulse');
                }, 1000); // Pulse for 1 second
            }

            // 3. Simulate progression by redirecting (after a slight delay for the effect)
            setTimeout(() => {
                // In a real application, you would change window.location.href here.
                // For this preview, we'll just remove the message.
                // window.location.href = destination; 
                messageBox.classList.remove('visible');
                messageBox.textContent = '';
                console.log(`Simulated navigation to: ${destination}`);
            }, 2500); 
        };
    </script>

