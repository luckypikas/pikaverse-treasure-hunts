<script>
function chooseDoor(path) {
  const box = document.getElementById("resultBox");
  box.style.display = "block";

  // handle outcomes
  switch(path) {
    case "correct":
      box.innerHTML = `
        <div>âœ¨ Correct door! You found the true path forward.</div>
        <a href="next-chamber.html" class="portalBtn">ENTER PORTAL â†’</a>
      `;
      break;

    case "loop":
      box.innerHTML = `
        <div>ðŸŒ€ This door leads to a looping hallway. Try anotherâ€¦</div>
      `;
      break;

    case "penalty":
      box.innerHTML = `
        <div>ðŸ’€ Trap triggered! You fall into a setback path.</div>
        <a href="setback-room.html" class="portalBtn">GO TO SETBACK â†’</a>
      `;
      break;

    case "empty":
      box.innerHTML = `
        <div>ðŸšª This room is empty. Nothing here but dust.</div>
      `;
      break;
  }
}
</script>

