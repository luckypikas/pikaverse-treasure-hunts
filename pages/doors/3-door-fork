<body>

    <div id="notification-box" class="notification-box"></div>

    <div class="max-w-6xl mx-auto p-4 sm:p-8 text-center">
        <header class="mb-16">
            <h1 class="text-5xl sm:text-7xl font-black text-indigo-300 mb-4 tracking-widest">
                THE CONVERGENCE
            </h1>
            <p class="text-xl sm:text-2xl text-gray-400 font-bold">
                Three choices stand before you. Only one path leads onward.
            </p>
        </header>

        <!-- Door Grid: All doors look identical -->
        <div class="grid md:grid-cols-3 gap-8">

            <!-- Door I -->
            <a href="#choice-i" onclick="handleDoorClick('Door I', 'Level_1_Labyrinth.html')" 
               class="mystery-door p-6 md:p-12 rounded-xl text-center">
                <div class="mystery-symbol mb-4">I</div>
                <h2 class="door-label text-xl text-gray-200">THE FIRST TRIAL</h2>
            </a>

            <!-- Door II -->
            <a href="#choice-ii" onclick="handleDoorClick('Door II', 'Level_2_Anomaly.html')" 
               class="mystery-door p-6 md:p-12 rounded-xl text-center">
                <div class="mystery-symbol mb-4">II</div>
                <h2 class="door-label text-xl text-gray-200">THE SECOND CHALLENGE</h2>
            </a>

            <!-- Door III -->
            <a href="#choice-iii" onclick="handleDoorClick('Door III', 'Level_3_Nexus.html')" 
               class="mystery-door p-6 md:p-12 rounded-xl text-center">
                <div class="mystery-symbol mb-4">III</div>
                <h2 class="door-label text-xl text-gray-200">THE FINAL GATEWAY</h2>
            </a>

        </div>

        <footer class="mt-16 text-gray-500 text-lg">
            <p>Once you choose, there is no turning back.</p>
        </footer>
    </div>

    <script>
        /**
         * Handles the click event for the mystery doors.
         * Shows a notification and simulates the progression link.
         * @param {string} doorName - The name of the door (e.g., "Door I").
         * @param {string} destination - The simulated progression link/file.
         */
        const handleDoorClick = (doorName, destination) => {
            const messageBox = document.getElementById('notification-box');
            
            // 1. Show message instead of alert()
            messageBox.textContent = `Accessing ${doorName}... Initializing data stream to ${destination}...`;
            messageBox.classList.add('visible');
            
            // 2. Add temporary visual feedback to the chosen door
            const targetDoor = event.currentTarget; // The clicked anchor element
            targetDoor.classList.add('animate-pulse', 'bg-red-900/50'); 

            // 3. Simulate progression after a delay
            setTimeout(() => {
                // In a real application, this is where window.location.href would change.
                // For this preview, we'll just remove the message and animation class.
                messageBox.classList.remove('visible');
                targetDoor.classList.remove('animate-pulse', 'bg-red-900/50');
                
                console.log(`Simulated navigation to: ${destination}`);
            }, 3000); 
        };
    </script>

</body>
