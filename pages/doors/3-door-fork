            font-family: 'Cinzel', serif;
            background: linear-gradient(145deg, #1f1f1f 0%, #000000 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #d1b89e; /* Aged paper/metal color */
            padding: 20px;
        }

        /* Door Card Styling */
        .mystery-door {
            background-color: #2c2c2c;
            border: 4px solid #4a4a4a;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5), 0 0 15px #6366f1; /* Subtle purple glow */
            transition: all 0.4s ease-in-out;
            cursor: pointer;
            position: relative;
            transform: translateY(0);
        }

        .mystery-door:hover {
            border-color: #6366f1;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.7), 0 0 30px #818cf8;
            transform: translateY(-5px) scale(1.03);
        }

        .mystery-symbol {
            font-size: 8rem;
