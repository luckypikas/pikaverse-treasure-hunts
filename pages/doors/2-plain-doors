<body>

    <div id="feedback-message" class="feedback-message"></div>

    <h1 class="text-3xl font-extrabold mb-10 text-gray-300 text-center uppercase tracking-wider">
        The Dual Gates of Progression
    </h1>

    <div class="choice-container">

        <!-- LEFT DOOR: OPTION A (NO LABEL) -->
        <a id="left-door" href="#left-path" onclick="handleDoorClick('Left Door', 'Path_Left.html')" 
           class="door-panel">
            
            <div class="door-body">
                <!-- 6 Panels (2 columns x 3 rows) -->
                <div class="panel"></div>
                <div class="panel"></div>
                <div class="panel"></div>
                <div class="panel"></div>
                <div class="panel"></div>
                <div class="panel"></div>
            </div>
            
            <!-- REMOVED: door-label-plate -->
        </a>

        <!-- RIGHT DOOR: OPTION B (NO LABEL) -->
        <a id="right-door" href="#right-path" onclick="handleDoorClick('Right Door', 'Path_Right.html')" 
           class="door-panel">

            <div class="door-body">
                <!-- 6 Panels (2 columns x 3 rows) -->
                <div class="panel"></div>
                <div class="panel"></div>
                <div class="panel"></div>
                <div class="panel"></div>
                <div class="panel"></div>
                <div class="panel"></div>
            </div>
            
            <!-- REMOVED: door-label-plate -->
        </a>

    </div>

    <script>
        /**
         * Handles the click event for the dual portals.
         */
        const handleDoorClick = (pathName, destination) => {
            // Prevent default hash navigation for cleaner effect
            event.preventDefault(); 
            
            const messageBox = document.getElementById('feedback-message');
            
            // 1. Show message
            messageBox.textContent = `You opened the ${pathName}. Initiating progression...`;
            messageBox.classList.add('visible');
            
            const targetPanel = event.currentTarget;
            targetPanel.style.transform = 'translateY(-12px) scale(1.04)';
            targetPanel.style.boxShadow = '0 25px 50px rgba(249, 115, 22, 0.5)';
            
            // 3. Remove feedback and reset door after a delay
            setTimeout(() => {
                messageBox.classList.remove('visible');
                targetPanel.style.transform = 'translateY(0) scale(1)';
                targetPanel.style.boxShadow = '0 10px 25px rgba(0, 0, 0, 0.7)';
                
                console.log(`Simulated navigation to: ${destination}`);
            }, 2500); 
        };
    </script>
</body>
