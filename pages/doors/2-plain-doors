    <style>
        /* Define the deep, textured background */
        body {
            font-family: 'Inter', sans-serif;
            background-color: #1a1a1a; /* Almost black background */
            /* Subtle, dark wall texture */
            background-image: radial-gradient(circle at center, #2e2e2e 0%, #1a1a1a 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: #e5e7eb; /* Light gray text */
            overflow: hidden;
            padding: 1rem;
        }
        
        /* Container for the side-by-side doors */
        .choice-container {
            display: flex;
            flex-direction: row; 
            gap: 2.5rem; 
            width: 100%;
            max-width: 900px;
            height: 80vh; 
            margin: auto;
            align-items: center;
            justify-content: center;
        }

        /* Styling for the Door Link */
        .door-panel {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center; /* Centering content, though there's only one main div */
            text-align: center;
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease;
            cursor: pointer;
            height: 100%;
            min-width: 150px;
            padding: 1rem;
            border-radius: 0.75rem;
            
            /* Visual styling for the door frame */
            background-color: #292524; /* Darker frame color */
            border: 6px solid #44403c; 
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.7);
            position: relative;
        }

        /* Inner container for the door texture and panels */
        .door-body {
            width: 100%;
            height: 100%;
            background-color: #57534e; /* Medium dark wood color */
            border: 1px solid #292524;
            border-radius: 0.25rem;
            display: grid;
            grid-template-columns: 1fr 1fr; /* Two vertical sections */
            grid-template-rows: repeat(3, 1fr); /* Three horizontal panels */
            gap: 0.65rem;
            padding: 0.75rem;
            box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.5); /* Inner shadow for depth */
        }

        /* Individual 6-Panel element */
        .panel {
            background-color: #645f5b; /* Slightly lighter inner panel face */
