    <script>
        /**
         * Handles the click event for the dual portals.
         * Shows a notification and simulates the progression link.
         * @param {string} pathName - The name of the chosen path.
         * @param {string} destination - The simulated progression link/file.
         */
        const handleDoorClick = (pathName, destination) => {
            const messageBox = document.getElementById('feedback-message');
            
            // 1. Show message instead of alert()
            messageBox.textContent = `Path Chosen: ${pathName}. Initiating transport to ${destination}...`;
            messageBox.classList.add('visible');
            
            // 2. Add temporary visual feedback (subtle shake or pulse)
            const targetPanel = event.currentTarget;
            // Prevent transition conflict with the hover effect
            targetPanel.style.transition = 'none'; 
            targetPanel.style.transform = 'scale(1.05)';
            
            // 3. Remove feedback and reset door after a delay
            setTimeout(() => {
                messageBox.classList.remove('visible');
                targetPanel.style.transform = 'scale(1)';
                targetPanel.style.transition = 'all 0.4s ease-in-out'; // Restore transition
                
                // In a real application, this is where window.location.href would change.
                console.log(`Simulated navigation to: ${destination}`);
            }, 2500); 
        };
    </script>
