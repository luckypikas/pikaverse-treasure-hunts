<body>

    <div id="feedback-message" class="feedback-message"></div>

    <h1 class="text-3xl font-bold mb-8 text-yellow-300 text-center">
        The Chambers of Fate
    </h1>

    <div class="choice-container">

        <!-- LEFT DOOR: PATH OF THE SCHOLAR -->
        <a href="#path-scholar" onclick="handleDoorClick('Path of the Scholar', 'Scholar_Library.html')" 
           class="door-panel">
            
            <div class="door-body">
                <!-- 6 Panels (2 columns x 3 rows) -->
                <div class="panel"></div>
                <div class="panel"></div>
                <div class="panel"></div>
                <div class="panel"></div>
                <div class="panel"></div>
                <div class="panel"></div>
            </div>

            <div class="door-info">
                <span class="door-title">THE LIBRARY</span>
                <p class="text-sm text-gray-400">Knowledge</p>
            </div>
        </a>

        <!-- RIGHT DOOR: PATH OF THE WARRIOR -->
        <a href="#path-warrior" onclick="handleDoorClick('Path of the Warrior', 'Warrior_Arena.html')" 
           class="door-panel">

            <div class="door-body">
                <!-- 6 Panels (2 columns x 3 rows) -->
                <div class="panel"></div>
                <div class="panel"></div>
                <div class="panel"></div>
                <div class="panel"></div>
