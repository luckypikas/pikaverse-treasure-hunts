        /* Styling for the interactive emoji buttons */
        .emoji-door {
            /* Full-width on mobile, constrained on desktop */
            width: 100%; 
            max-width: 400px;
            padding: 1rem 0;
            margin-bottom: 1rem;
            border-radius: 9999px; /* Fully rounded/pill shape */
