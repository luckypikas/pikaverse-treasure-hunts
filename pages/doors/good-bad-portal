<body>

    <div id="feedback-message" class="feedback-message"></div>

    <div class="center-container">
        <header class="mb-8 text-center">
            <h1 class="text-4xl sm:text-5xl font-extrabold mb-2">
                CHOOSE YOUR VIBE
            </h1>
            <p class="text-lg text-indigo-200">
                Pick the path that matches your current mood.
            </p>
        </header>

        <!-- Door 1: The Devil -->
        <a href="#devil-path" onclick="handleDoorClick('The Dark Path', 'Destiny_One.html', 'ðŸ˜ˆ')" 
           class="emoji-door text-red-300">
            <span class="emoji-icon">ðŸ˜ˆ</span>
            <span class="emoji-text">The Dark Path (Destiny I)</span>
        </a>

        <!-- Door 2: The Happy Face -->
        <a href="#happy-path" onclick="handleDoorClick('The Joyful Path', 'Destiny_Two.html', 'ðŸ˜Š')" 
           class="emoji-door text-green-300">
            <span class="emoji-icon">ðŸ˜Š</span>
            <span class="emoji-text">The Joyful Path (Destiny II)</span>
        </a>

        <!-- Door 3: The Cowboy -->
        <a href="#cowboy-path" onclick="handleDoorClick('The Wild Path', 'Destiny_Three.html', 'ðŸ¤ ')" 
           class="emoji-door text-yellow-300">
            <span class="emoji-icon">ðŸ¤ </span>
            <span class="emoji-text">The Wild Path (Destiny III)</span>
        </a>
    </div>

    <script>
        /**
         * Handles the click event for the vertical emoji doors.
         * Shows a notification and simulates the progression link.
         * @param {string} doorName - The name of the path.
         * @param {string} destination - The simulated progression link/file.
         * @param {string} emoji - The emoji used.
         */
        const handleDoorClick = (doorName, destination, emoji) => {
            const messageBox = document.getElementById('feedback-message');
            
            // 1. Show message instead of alert()
            messageBox.textContent = `${emoji} Chosen: ${doorName}. Redirecting to ${destination}...`;
            messageBox.classList.add('visible');
            
            // 2. Add temporary success glow to the selected door
            const targetDoor = event.currentTarget; 
            targetDoor.style.transform = 'scale(1.08)';
            targetDoor.style.borderColor = '#34D399'; // Green border flash

            // 3. Remove feedback and reset door after a delay
            setTimeout(() => {
                messageBox.classList.remove('visible');
                targetDoor.style.transform = 'scale(1)';
                targetDoor.style.borderColor = 'transparent'; 
                
                // In a real application, this is where window.location.href would change.
                console.log(`Simulated navigation to: ${destination}`);
            }, 2000); 
        };
    </script>
