<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Psychics: Guess the Symbol</title>
    <!-- Load Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Load Lucide Icons library -->
    <script src="https://unpkg.com/lucide@latest"></script>
    
    <style>
        /* CSS Keyframe Animations */
        @keyframes pulse-slow {
            0%, 100% { transform: scale(1); opacity: 1; }
            50% { transform: scale(1.1); opacity: 0.8; }
        }
        .animate-pulse-slow { animation: pulse-slow 3s infinite ease-in-out; }
        
        @keyframes fade-in-up {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .animate-fade-in-up { animation: fade-in-up 1s ease-out forwards; }

        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-5px); }
            75% { transform: translateX(5px); }
        }
        .shake-animation { animation: shake 0.3s ease-in-out 3; }

        .game-card {
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
        }
    </style>
</head>
<body class="min-h-screen bg-slate-950 text-slate-100 font-sans flex flex-col items-center justify-center p-4 overflow-hidden relative">

    <!-- Background Ambience -->
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-purple-900/20 via-slate-950 to-slate-950 pointer-events-none"></div>

    <!-- Header / Attempts Indicator -->
    <div class="z-10 text-center mb-8 space-y-2">
        <h1 class="text-3xl md:text-5xl font-thin tracking-[0.2em] uppercase text-purple-200 opacity-90">
            Psychics
        </h1>
        <div class="flex justify-center gap-2 text-sm text-slate-500 tracking-widest">
            <span>ATTEMPTS REMAINING:</span>
            <div id="attempts-display" class="flex gap-1">
                <!-- Attempts will be injected here -->
            </div>
        </div>
    </div>

    <!-- MAIN GAME AREA -->
    <div class="z-10 relative w-full max-w-4xl h-96 flex flex-col items-center justify-center">
        
        <!-- SYMBOL GRID CONTAINER -->
        <div id="symbol-grid" class="flex flex-wrap justify-center gap-4 md:gap-8">
            <!-- Cards will be injected here -->
        </div>

        <!-- SUCCESS PORTAL (Progression Link) -->
        <div id="success-portal" class="absolute inset-0 hidden flex-col items-center justify-center animate-fade-in-up">
            <div class="relative group cursor-pointer">
                <!-- The "Third Eye" Portal Visual (using Lucide icon via JS) -->
                <div class="absolute inset-0 bg-white rounded-full blur-[60px] opacity-40 group-hover:opacity-80 transition-opacity duration-1000"></div>
                <i data-lucide="eye" class="text-white relative z-10 animate-pulse-slow" style="width: 120px; height: 120px;"></i>
                
                <!-- THE LINK BUTTON -->
                <button 
                    onclick="window.open(GAME_CONFIG.NEXT_LEVEL_URL, '_blank')"
                    class="mt-12 bg-transparent border border-white/30 text-white px-8 py-3 rounded-full uppercase tracking-[0.3em] text-sm hover:bg-white hover:text-black transition-all duration-500 flex items-center gap-2 mx-auto"
                >
                    Enter The Sanctuary <i data-lucide="arrow-right" class="w-4 h-4"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- STATUS MESSAGE AREA -->
    <div class="z-10 h-24 mt-8 flex items-center justify-center">
        <p id="message-area" class="text-xl font-light tracking-wide transition-all duration-500 text-purple-300">
            Game initializing...
        </p>
    </div>

    <!-- RETRY BUTTON (First Fail) -->
    <button 
        id="retry-button" 
        onclick="handleRetry()"
        class="z-20 mt-4 px-6 py-2 border border-red-900/50 text-red-400 text-xs uppercase tracking-widest hover:bg-red-900/20 transition-colors rounded hidden"
    >
        Clear Your Mind (Try Again)
    </button>

    <!-- PENALTY OVERLAY (Hard Fail) -->
    <div id="penalty-overlay" class="fixed inset-0 z-50 bg-black/90 hidden flex-col items-center justify-center animate-fade-in">
        <i data-lucide="skull" class="text-red-600 mb-6 animate-bounce" style="width: 64px; height: 64px;"></i>
        <h2 class="text-4xl text-red-600 font-bold tracking-widest mb-4">LOCKED OUT</h2>
        <p class="text-red-800 animate-pulse mb-8">Redirecting to penalty zone...</p>
        
        <!-- Redirection Link -->
        <a id="penalty-link" href="#" class="text-xs text-stone-600 hover:text-red-500 underline decoration-dotted">
            [Force Jump Now]
        </a>
    </div>

    <!-- JAVASCRIPT LOGIC -->
    <script>
        // --- GAME CONFIGURATION (The "Oracle" Agent's Rules) ---
        const GAME_CONFIG = {
            NEXT_LEVEL_URL: "https://example.com/level-2-sanctuary", // The Progression Link
            PENALTY_URL: "https://example.com/the-void", // The Penalty Link
            REVEAL_DELAY_MS: 3000, // Directive [DELAY_REVEAL]
            MAX_ATTEMPTS: 2, // Constraint [ATTEMPT_COUNTER]
            SYMBOLS: [
                { id: 'A', content: 'A' },
                { id: 'B', content: 'B' },
                { id: 'C', content: 'C' },
                { id: 'D', content: 'D' },
                { id: 'E', content: 'E' },
            ]
        };

        // --- GAME STATE (The "Gatekeeper" Agent's Tracking) ---
        let gameState = 'intro';
        let targetSymbol = null;
        let selectedSymbolId = null;
        let attempts = 0;

        const DOM = {
            grid: document.getElementById('symbol-grid'),
            message: document.getElementById('message-area'),
            attempts: document.getElementById('attempts-display'),
            portal: document.getElementById('success-portal'),
            retryBtn: document.getElementById('retry-button'),
            penaltyOverlay: document.getElementById('penalty-overlay'),
            penaltyLink: document.getElementById('penalty-link'),
        };

        // --- CORE GAME LOGIC ---

        function updateGameState(newState, newMessage) {
            gameState = newState;
            DOM.message.textContent = newMessage;
            renderGame();
        }

        function startRound() {
            // The Oracle selects a random symbol
            const randomIndex = Math.floor(Math.random() * GAME_CONFIG.SYMBOLS.length);
            targetSymbol = GAME_CONFIG.SYMBOLS[randomIndex];
            updateGameState('choosing', "Tune your mind. Predict the hidden symbol.");
        }

        function handleCardSelect(symbolId) {
            if (gameState !== 'choosing') return;

            selectedSymbolId = symbolId;
            updateGameState('revealing', "The spirits are deciding...");
            
            // Directive [DELAY_REVEAL]: Wait 3 seconds
            setTimeout(evaluateChoice, GAME_CONFIG.REVEAL_DELAY_MS);
        }

        function evaluateChoice() {
            // Command [MATCH_LOGIC]
            if (selectedSymbolId === targetSymbol.id) {
                // SUCCESS
                updateGameState('success', "VISION CLEAR. The path opens.");
                // Ensure icons are rendered after DOM manipulation
                lucide.createIcons(); 
            } else {
                // WRONG ANSWER logic
                attempts++;
                
                if (attempts >= GAME_CONFIG.MAX_ATTEMPTS) {
                    // PENALTY CONDITION
                    updateGameState('failure', "MIND SEVERED. The void claims you.");
                    
                    // Set penalty link and initiate redirect
                    DOM.penaltyLink.href = GAME_CONFIG.PENALTY_URL;
                    
                    // Directive [HARD_FAIL_REDIRECT] - countdown logic
                    setTimeout(() => {
                       window.location.href = GAME_CONFIG.PENALTY_URL;
                    }, 3000);
                } else {
                    // RETRY CONDITION
                    updateGameState('retry', "The fog is thick. Focus... Try again.");
                }
            }
        }

        function handleRetry() {
            selectedSymbolId = null;
            updateGameState('choosing', "Tune your mind. Predict the hidden symbol.");
        }

        // --- RENDER FUNCTIONS (Updating the DOM) ---

        function renderAttempts() {
            let html = '';
            for (let i = 0; i < GAME_CONFIG.MAX_ATTEMPTS; i++) {
                const isRemaining = i < (GAME_CONFIG.MAX_ATTEMPTS - attempts);
                html += `<div class="w-3 h-3 rounded-full ${isRemaining ? 'bg-purple-500 shadow-[0_0_8px_rgba(168,85,247,0.8)]' : 'bg-slate-800'}"></div>`;
            }
            DOM.attempts.innerHTML = html;
        }

        function renderCards() {
            if (gameState === 'success') {
                DOM.grid.innerHTML = '';
                return;
            }

            let html = '';
            GAME_CONFIG.SYMBOLS.forEach(s => {
                let baseClass = "w-24 h-36 rounded-xl border-2 flex items-center justify-center cursor-pointer transition-all duration-500 transform hover:scale-105 game-card text-2xl font-bold ";
                let finalClass = '';
                let content = s.content;
                let isSelected = selectedSymbolId === s.id;
                let isTarget = targetSymbol && s.id === targetSymbol.id;

                if (gameState === 'choosing' || gameState === 'retry') {
                    finalClass = baseClass + "bg-slate-800 border-slate-600 hover:border-purple-400 hover:shadow-lg text-slate-300";
                } else if (gameState === 'revealing') {
                    if (isSelected) {
                        finalClass = baseClass + "bg-purple-600 border-purple-400 animate-pulse scale-110 shadow-[0_0_20px_rgba(168,85,247,0.6)]";
                    } else {
                        finalClass = baseClass + "opacity-30 scale-90 border-slate-700 bg-slate-900";
                    }
                } else if (gameState === 'failure') {
                    if (isSelected) {
                        finalClass = baseClass + "bg-red-900 border-red-500 shake-animation";
                    } else {
                        finalClass = baseClass + "opacity-50 border-slate-700 bg-slate-900";
                    }
                }
                
                // Show the target on failure/retry so the player knows what they missed
                if (isTarget && (gameState === 'retry' || gameState === 'failure')) {
                    finalClass = finalClass.replace('opacity-50', 'bg-green-800 border-green-500');
                }

                html += `
                    <div 
                        class="${finalClass}"
                        onclick="handleCardSelect('${s.id}')"
                    >
                        ${(gameState !== 'choosing' && gameState !== 'retry') ? content : '?' }
                    </div>
                `;
            });
            DOM.grid.innerHTML = html;
        }

        function renderGame() {
            // Manage UI element visibility based on gameState
            DOM.grid.classList.remove('hidden');
            DOM.portal.classList.add('hidden');
            DOM.retryBtn.classList.add('hidden');
            DOM.penaltyOverlay.classList.add('hidden');

            // Message text color update
            if (gameState === 'failure') {
                DOM.message.classList.remove('text-purple-300', 'text-white');
                DOM.message.classList.add('text-red-500');
            } else if (gameState === 'success') {
                DOM.message.classList.remove('text-purple-300', 'text-red-500');
                DOM.message.classList.add('text-white', 'shadow-white', 'drop-shadow-[0_0_10px_rgba(255,255,255,0.8)]');
            } else {
                DOM.message.classList.remove('text-red-500', 'text-white');
                DOM.message.classList.add('text-purple-300');
            }

            if (gameState === 'success') {
                DOM.portal.classList.remove('hidden');
                DOM.grid.classList.add('hidden');
            } else if (gameState === 'retry') {
                DOM.retryBtn.classList.remove('hidden');
            } else if (gameState === 'failure') {
                DOM.penaltyOverlay.classList.remove('hidden');
            }

            renderAttempts();
            renderCards();
        }

        // --- INITIALIZATION ---
        window.onload = startRound;
        
    </script>
    <script>
      // Automatically replace lucide icons after the DOM is rendered
      lucide.createIcons();
    </script>
</body>
</html>
